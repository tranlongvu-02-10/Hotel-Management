<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Team_Project_4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Team_Project_4.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="#" id="menuToggle" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Quản lý khách sạn</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <!-- Manager menu items -->
                        <li>
                            <a asp-controller="Client" asp-action="ClientList" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-person-circle"></i><span class="ms-1 d-none d-sm-inline">Khách</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Room" asp-action="RoomList" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-building"></i><span class="ms-1 d-none d-sm-inline">Phòng</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Rent" asp-action="Index" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-card-list"></i><span class="ms-1 d-none d-sm-inline">Phiếu thuê</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Bill" asp-action="Index" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-receipt"></i><span class="ms-1 d-none d-sm-inline">Hóa Đơn</span>
                            </a>
                        </li>

                        <li>
                            <a href="#submenu5" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="bi bi-flag"></i><span class="ms-1 d-none d-sm-inline">Báo cáo</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu5" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a asp-controller="SaleReport" asp-action="Index" class="nav-link px-0 align-middle text-white">
                                        <i class="bi bi-flag-fill"></i><span class="ms-1 d-none d-sm-inline">Báo cáo doanh thu</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Room" asp-action="RoomUsageReport" class="nav-link px-0 align-middle text-white">
                                        <i class="bi bi-flag-fill"></i><span class="ms-1 d-none d-sm-inline">Báo cáo tỷ lệ dùng</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        @if (User.IsInRole("Manager"))
                        {
                            <li>
                                <a asp-controller="Account" asp-action="Register" class="nav-link px-0 align-middle text-white">
                                    <i class="bi bi-person-plus"></i><span class="ms-1 d-none d-sm-inline">Quản lý tài khoản</span>
                                </a>
                            </li>
                        }

                    </ul>
                    <hr>
                    <hr />
                    <div class="mb-auto mt-auto">
                        <div class="text-center">
                            <a asp-controller="Account" asp-action="Logout" class="text-white" style="text-decoration: none;">
                                <i class="bi bi-box-arrow-left"></i><span class="ms-1 d-none d-sm-inline">Đăng xuất</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col py-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>