@model IEnumerable<Team_Project_4.Models.Hoadon>

@{
    ViewData["Title"] = "Hóa Đơn";
    Layout = "_ManagerLayout";
}

<style>
    /* Main container styling */
    .invoice-history-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    /* Header styling */
    h1 {
        color: #2c3e50;
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        position: relative;
    }

    h1:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 200px;
        height: 3px;
        background: linear-gradient(to right, #3498db, #2ecc71);
    }

    /* Button styling */
    .btn {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
    }

    .btn-primary {
        background-color: #3498db;
    }

    .btn-info {
        background-color: #17a2b8;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Table styling */
    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 30px;
    }

    .thead-dark {
        background: linear-gradient(135deg, #3498db, #2980b9);
    }

    .table th {
        padding: 15px;
        text-align: center;
        font-weight: 500;
        color: white;
        border: none;
    }

    .table td {
        padding: 12px 15px;
        text-align: center;
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(240, 248, 255, 0.5);
    }

    .table-striped tbody tr:hover {
        background-color: #f1f9ff;
    }

    /* Create invoice button */
    .create-invoice-btn {
        margin-bottom: 20px;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .invoice-history-container {
            padding: 20px;
        }
        
        .btn {
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>

<div class="invoice-history-container">
    <h1>LỊCH SỬ HÓA ĐƠN</h1>
    
    <div class="create-invoice-btn">
        <form asp-action="Test2">
            <button type="submit" class="btn btn-primary float-right">Lập Hóa Đơn</button>
        </form>
    </div>

    <table class="table table-striped table-bordered text-center">
        <thead class="thead-dark">
            <tr>
                <th>Tên Khách Hàng</th>
                <th>Tên Phòng</th>
                <th>Ngày Thanh Toán</th>
                <th>Tổng Tiền</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Tenkh)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tenphong)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ngaylaphd)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tongtien)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Mahd" class="btn btn-info">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<script>
    jQuery(document).ready(function ($) {
        var table = $('.table').DataTable({
            paging: false, // Disable paging
            searching: false, // Disable searching
            order: [[2, 'desc']], // Sort by date column (index 2) descending
            language: {
                url: "//cdn.datatables.net/plug-ins/1.11.5/i18n/vi.json" // Vietnamese language
            }
        });
    });
</script>