@model Team_Project_4.Models.Hoadon

@{
    ViewData["Title"] = "Details";
    Layout = "_ManagerLayout";
}

<style>
    /* Main container styling */
    .invoice-detail-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    /* Header styling */
    h1 {
        color: #2c3e50;
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        position: relative;
    }

    h1:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 200px;
        height: 3px;
        background: linear-gradient(to right, #3498db, #2ecc71);
    }

    /* Description list styling */
    .row {
        margin-bottom: 15px;
    }

    dt {
        font-weight: 600;
        color: #2c3e50;
        padding: 10px 0;
    }

    dd {
        padding: 10px 0;
        color: #495057;
        border-bottom: 1px solid #f0f0f0;
    }

    /* Highlight important information */
    .total-amount {
        font-weight: 600;
        color: #e74c3c;
        font-size: 1.1em;
    }

    /* Button styling */
    .btn {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
    }

    .btn-warning {
        background-color: #f39c12;
        color: white;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .invoice-detail-container {
            padding: 20px;
        }
        
        dt, dd {
            padding: 8px 0;
        }
    }
</style>

<div class="invoice-detail-container">
    <h1>CHI TIẾT HÓA ĐƠN</h1>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Tên Khách Hàng
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tenkh)
            </dd>
            <dt class="col-sm-2">
                CCCD
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cccd)
            </dd>
            <dt class="col-sm-2">
                Tên Phòng
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tenphong)
            </dd>
            <dt class="col-sm-2">
                Ngày Đến
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ngaydat)
            </dd>
            <dt class="col-sm-2">
                Ngày Đi
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ngaylaphd)
            </dd>
            <dt class="col-sm-2">
                Số Ngày Ở
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Songayo)
            </dd>
            <dt class="col-sm-2">
                Tổng Tiền
            </dt>
            <dd class="col-sm-10 total-amount">
                @Html.DisplayFor(model => model.Tongtien)
            </dd>
            <dt class="col-sm-2">
                Phụ Thu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tylephuthu)%
            </dd>
        </dl>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-warning">Quay lại lịch sử hóa đơn</a>
    </div>
</div>